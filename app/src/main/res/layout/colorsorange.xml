<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1">


    <Button
        android:id="@+id/buttonorange"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:shape="rectangle"
        android:text="@string/txtorange"/>

    <TextView
        android:id="@+id/txtorange"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/progressBar"
        android:layout_marginTop="153dp"
        android:padding="20dp"
        android:shape="rectangle"
        android:text="@string/txtorange"
        android:textSize="20dp"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/imageButtonMorado"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toLeftOf="@+id/next1"
        android:layout_below="@+id/imageButtonRosa"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/morado"/>

    <ImageButton
        android:id="@+id/imageButtonGris"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/next1"
        android:layout_below="@+id/imageButtonRosa"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/gris"/>

    <ImageButton
        android:id="@+id/imageButtonRojo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/rojo"/>

    <ImageButton
        android:id="@+id/imageButtonVerde"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/imageButtonRojo"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/verde"/>


    <ImageButton
        android:id="@+id/imageButtonRosa"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/imageButtonRojo"
        android:layout_above="@+id/imageButtonRojo"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/rosa"/>

    <ImageButton
        android:id="@+id/imageButtonAmarillo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageButtonRojo"
        android:layout_toLeftOf="@+id/imageButtonRojo"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/amarillo"/>

    <ImageButton
        android:id="@+id/imageButtonNaranjo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toLeftOf="@+id/next1"
        android:layout_below="@+id/imageButtonMorado"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/naranjo"/>

    <ImageButton
        android:id="@+id/imageButtonNegro"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/next1"
        android:layout_above="@+id/next1"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/negro"/>

    <ImageButton
        android:id="@+id/imageButtonAzul"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageButtonRojo"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/azul"/>

    <Button
        android:id="@+id/next1"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_below="@+id/imageButtonAzul"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:shape="rectangle"
        android:text="Siguiente"/>

    <ProgressBar
    android:id="@+id/progressBar"
    style="?android:attr/progressBarStyle"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_below="@+id/next1"
    android:layout_centerHorizontal="true"/>



</RelativeLayout>