<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo5">
    tools:context=".Number1">


    <ImageView
        android:id="@+id/imageDado3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/button2"
        android:background="@color/cardview_light_background"
        app:srcCompat="@drawable/d3"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="onClick"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:layout_margin="10dp"
        android:text="@string/txt2"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:onClick="onClick"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:layout_below="@+id/button2"
        android:text="@string/txt5"/>


    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/button2"
        android:textSize="24sp"
        android:textStyle="bold"
        android:onClick="onClick"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:layout_alignBaseline="@+id/button2"
        android:text="@string/txt3"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/button5"
        android:textSize="24sp"
        android:textStyle="bold"
        android:onClick="onClick"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:layout_alignBaseline="@+id/button5"
        android:text="@string/txt6"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/button2"
        android:onClick="onClick"
        android:layout_toLeftOf="@id/button2"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:text="@string/txt1"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toLeftOf="@id/button5"
        android:onClick="onClick"
        android:layout_alignBaseline="@+id/button5"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:text="@string/txt4"
        android:textSize="24sp"
        android:textStyle="bold"/>



</RelativeLayout>
