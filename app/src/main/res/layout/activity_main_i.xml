<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo6"
    android:gravity="center"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_letra_i"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/LetraA"
        android:layout_marginTop="-250dp"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:text="@string/txtletra_i"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtletra_i"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="-180dp"
        android:text="@string/txtletra_i"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/LetraI"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:onClick="onClick"
        app:srcCompat="@drawable/letra_i"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/LetraA"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_above="@+id/LetraI"
        app:srcCompat="@drawable/letra_a"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/LetraI"
        android:id="@+id/LetraU"
        android:layout_centerHorizontal="true"
        android:src="@drawable/letra_u"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@id/LetraI"
        android:id="@+id/LetraO"
        android:layout_alignBaseline="@id/LetraI"
        android:src="@drawable/letra_o"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_toLeftOf="@id/LetraI"
        android:id="@+id/LetraE"
        android:layout_alignBaseline="@id/LetraI"
        android:src="@drawable/letra_e"/>



</RelativeLayout>